# Deployment Environment Variables
# These variables help resolve Node.js module caching permission issues

# Disable package caching to prevent permission issues
NPM_CONFIG_CACHE=/tmp/.npm
DISABLE_NPM_CACHE=true
DISABLE_OPENCOLLECTIVE=true

# Keep development dependencies which may resolve module access issues  
KEEP_DEV_DEPENDENCIES=true

# Node.js options for deployment
NODE_OPTIONS=--max-old-space-size=4096

# Production settings
NODE_ENV=production
PORT=5000