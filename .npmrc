# NPM Configuration to fix cache permission issues during deployment
cache=/tmp/.npm
fund=false
audit=false
update-notifier=false
# Disable OpenCollective messages
disable-opencollective=true
# Additional cache settings for deployment
progress=false
loglevel=warn
# Force npm to use the specified cache directory
cache-min=0
# Additional permission fixes
prefer-offline=false
ignore-scripts=false
unsafe-perm=true
# Development dependencies handling
omit=
save-dev=false