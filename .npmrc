# NPM Configuration to fix cache permission issues during deployment
# Redirect cache to writable directory
cache=/tmp/.npm
tmp=/tmp
init-cache=/tmp/.npm-init
# Disable problematic features
fund=false
audit=false
update-notifier=false
disable-opencollective=true
# Build optimization settings
progress=false
loglevel=warn
cache-min=0
prefer-offline=false
ignore-scripts=false
unsafe-perm=true
# Development dependencies handling
omit=
save-dev=false
# Additional cache directory settings
cache-lock-retries=10
cache-lock-stale=60000
cache-lock-wait=10000