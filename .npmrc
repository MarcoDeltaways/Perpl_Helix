# Enhanced Replit deployment cache fixes - complete isolation
cache=/tmp/.npm-deployment-cache
tmp=/tmp
init-cache=/tmp/.npm-deployment-init
prefix=/tmp/.npm-deployment-prefix
store-dir=/tmp/.npm-deployment-store

# Disable ALL problematic npm features that cause permission issues
fund=false
audit=false
update-notifier=false
disable-opencollective=true
progress=false
loglevel=warn
package-lock=false
shrinkwrap=false
save=false
save-dev=false
save-optional=false
save-exact=false

# Force npm to completely avoid system cache directories
cache-max=0
cache-min=0
cache-lock-retries=1
cache-lock-stale=10000
cache-lock-wait=1000
prefer-online=true
unsafe-perm=true
ignore-scripts=false

# Use completely isolated writable locations
globalconfig=/tmp/.npmrc-deployment-global
userconfig=/tmp/.npmrc-deployment-user

# Additional isolation settings
registry-timeout=15000
fetch-timeout=15000
fetch-retries=1
fetch-retry-factor=1
fetch-retry-mintimeout=1000
fetch-retry-maxtimeout=3000
