{
  "version": 2,
  "env": {
    "NPM_CONFIG_CACHE": "/tmp/.npm",
    "DISABLE_NPM_CACHE": "true",
    "DISABLE_OPENCOLLECTIVE": "true",
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "KEEP_DEV_DEPENDENCIES": "true"
  },
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "shared/**",
        "excludeFiles": [
          "node_modules/.cache/**",
          ".cache/**"
        ]
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public",
        "buildCommand": "rm -rf node_modules/.cache && rm -rf .cache && npm cache clean --force && npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/$1"
    }
  ],
  "functions": {
    "server/index.ts": {
      "includeFiles": "shared/**"
    }
  }
}